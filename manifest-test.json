{
  "manifest_version": 3,
  "name": "Twitter Profile Hider (Test)",
  "version": "1.0.0",
  "description": "Test version - Hide your profile information on X.com (Twitter) for privacy",
  "permissions": [
    "storage",
    "activeTab"
  ],
  "host_permissions": [
    "*://x.com/*",
    "*://twitter.com/*"
  ],
  "content_scripts": [
    {
      "matches": ["*://x.com/*", "*://twitter.com/*"],
      "js": ["src/scripts/test-content.js"],
      "run_at": "document_idle"
    }
  ],
  "background": {
    "service_worker": "src/scripts/background.js"
  },
  "action": {
    "default_popup": "src/popup/popup.html"
  }
}